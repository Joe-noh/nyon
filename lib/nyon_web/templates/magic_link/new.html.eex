<h2>New Magic link</h2>

<%= form_for @changeset, Routes.magic_link_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :email %>
  <%= text_input f, :email %>
  <%= error_tag f, :email %>

  <div>
    <%= submit "Send Magic Link", class: "c-button c-button--red" %>
  </div>
<% end %>
